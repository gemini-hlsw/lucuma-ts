{
  "name": "navigate-ts",
  "description": "Monorepo for navigate typescript projects",
  "version": "1.0.0",
  "type": "module",
  "packageManager": "pnpm@10.29.3",
  "license": "BSD-3-Clause",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gemini-hlsw/navigate-ts.git"
  },
  "scripts": {
    "ui": "pnpm --filter navigate-ui",
    "configs": "pnpm --filter navigate-configs",
    "e2e": "pnpm --filter navigate-e2e",
    "all": "pnpm -r",
    "build": "tsc -b",
    "lint": "pnpm lint:prettier && pnpm lint:style && pnpm -r lint:eslint",
    "lint:prettier": "prettier --check .",
    "lint:style": "stylelint 'packages/*/src/**/*.css'",
    "tsc:watch": "tsc --build --watch",
    "prepare": "node .husky/install.js"
  },
  "devDependencies": {
    "@eslint/js": "9.39.3",
    "@graphql-codegen/cli": "6.1.1",
    "@graphql-eslint/eslint-plugin": "4.4.0",
    "@parcel/watcher": "2.5.6",
    "@tailwindcss/vite": "4.2.1",
    "@tsconfig/node-ts": "23.6.4",
    "@tsconfig/node24": "24.0.4",
    "@tsconfig/strictest": "2.0.8",
    "@tsconfig/vite-react": "7.0.2",
    "@types/node": "24.10.13",
    "@types/react": "19.2.14",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "5.1.4",
    "@vitest/browser-playwright": "4.1.0-beta.4",
    "babel-plugin-react-compiler": "1.0.0",
    "eslint": "9.39.3",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import-x": "4.16.1",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "7.0.1",
    "eslint-plugin-react-refresh": "0.5.2",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "globals": "17.3.0",
    "husky": "9.1.7",
    "lint-staged": "16.2.7",
    "playwright": "1.58.2",
    "prettier": "3.8.1",
    "prettier-plugin-tailwindcss": "0.7.2",
    "sass": "1.97.3",
    "stylelint": "17.3.0",
    "stylelint-config-standard": "40.0.0",
    "tailwindcss": "4.2.1",
    "typescript": "5.9.3",
    "typescript-eslint": "8.56.1",
    "vite": "8.0.0-beta.15",
    "vite-plugin-mkcert": "1.17.9",
    "vitest": "4.1.0-beta.4",
    "vitest-browser-react": "2.0.5"
  },
  "lint-staged": {
    "*.{js,mjs,ts,tsx,jsx,css,md,json,yml,yaml}": "prettier --write",
    "*.css": "stylelint --fix"
  },
  "pnpm": {
    "overrides": {
      "vite": "8.0.0-beta.15"
    }
  }
}
