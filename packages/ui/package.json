{
  "name": "navigate-ui",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gemini-hlsw/navigate-ts.git",
    "directory": "packages/ui"
  },
  "scripts": {
    "dev": "vite",
    "codegen:watch": "graphql-codegen --config tasks/codegen.ts --watch 'src/gql/**/*.ts' --watch '../configs/src/graphql/*.graphql'",
    "prebuild": "pnpm run codegen",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "lint:eslint": "eslint .",
    "codegen": "graphql-codegen --config tasks/codegen.ts"
  },
  "devDependencies": {
    "@apollo/client": "4.1.5",
    "@fortawesome/fontawesome-svg-core": "7.2.0",
    "@fortawesome/pro-regular-svg-icons": "7.2.0",
    "@fortawesome/react-fontawesome": "3.2.0",
    "@graphql-codegen/client-preset": "5.2.3",
    "@graphql-typed-document-node/core": "3.2.0",
    "@xyflow/react": "12.10.1",
    "clsx": "2.1.1",
    "date-fns": "4.1.0",
    "graphql": "16.12.0",
    "graphql-ws": "6.0.7",
    "jotai": "2.18.0",
    "lucuma-common-ui": "workspace:*",
    "lucuma-core": "0.173.0",
    "lucuma-schemas": "0.177.0-20260217-2e3d340a",
    "lucuma-ui-css": "0.175.0",
    "navigate-configs": "workspace:*",
    "primereact": "10.9.7",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "react-router": "7.13.0",
    "tailwind-merge": "3.5.0"
  },
  "bundlemon": {
    "baseDir": "./dist",
    "pathLabels": {
      "hash": "[a-zA-Z0-9\\-_]+"
    },
    "files": [
      {
        "path": "assets/*-<hash>.{js,css}"
      }
    ],
    "reportOutput": [
      "github"
    ]
  }
}
